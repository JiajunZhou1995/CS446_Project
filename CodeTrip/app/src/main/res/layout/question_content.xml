<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <ScrollView
        android:layout_width="@dimen/question_content_width"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:scrollbars="none">
        <LinearLayout
            android:id="@+id/question_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/info_body"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/quesiton_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    android:text="topic"/>

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/question_difficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="difficult"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <TextView
                android:id="@+id/question_knowledge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/question_instruction"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorDarkGrey"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--<TextView-->
                    <!--android:id="@+id/question_id"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textColor="@color/colorBluePurple"-->
                    <!--android:textSize="14dp"-->
                    <!--android:text="questionID"/>-->
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="30dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:id="@+id/flyInIndicator"
        android:textColor="@color/colorWhite"
        android:visibility="gone"/>

    <com.mtr.codetrip.codetrip.CostumWidgets.RunButton
        android:id="@+id/doit"
        style="@style/question_button.invalid"/>
</LinearLayout>