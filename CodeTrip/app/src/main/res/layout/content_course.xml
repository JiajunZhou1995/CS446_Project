<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/course_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/course_content_page"
        tools:context="com.mtr.codetrip.codetrip.CourseActivity">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/course_map_element_bear"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/imageView2" />

        <ImageView
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_alignStart="@+id/imageView2"
            android:layout_below="@+id/textView2"
            android:layout_marginStart="126dp"
            android:layout_marginTop="29dp"
            android:src="@mipmap/course_map_element_cloud" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:id="@+id/textView2" />

    </RelativeLayout>
</ScrollView>
