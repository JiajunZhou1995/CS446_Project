<resources>

    <style name="FontStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FontStyle.DropBlank">
        <item name="android:textColor">@color/colorDarkGrey</item>
        <item name="android:fontFamily">@font/menlo</item>
    </style>

    <style name="FontStyle.LineNumber">
        <item name="android:textColor">@color/colorLightGrey</item>
    </style>

    <style name="FontStyle.NormalCode">

        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/menlo</item>
    </style>

    <style name="FontStyle.CodeBlock">
        <item name="android:textColor">@color/colorBlack</item>
    </style>


     <!--Base application theme.-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar" >
        <!-- Customize your theme here. -->

        <!-- sidebar selected, action bar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--  statusbar color, -->
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/noAnimation</item>
    </style>


    <style name="AppTheme.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.Question" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:textColorSecondary">@color/colorBlack</item>
    </style>

    <style name="AppTheme.AppBarOverlay_question" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:textColorSecondary">@color/colorBlack</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>


    <style name="noAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>

        <item name="android:activityOpenExitAnimation">@null</item>

        <item name="android:activityCloseEnterAnimation">@null</item>

        <item name="android:activityCloseExitAnimation">@null</item>

        <item name="android:taskOpenEnterAnimation">@null</item>

        <item name="android:taskOpenExitAnimation">@null</item>

        <item name="android:taskCloseEnterAnimation">@null</item>

        <item name="android:taskCloseExitAnimation">@null</item>

        <item name="android:taskToFrontEnterAnimation">@null</item>

        <item name="android:taskToFrontExitAnimation">@null</item>

        <item name="android:taskToBackEnterAnimation">@null</item>

        <item name="android:taskToBackExitAnimation">@null</item>
    </style>
    
    
    <style name="question_button">
        <item name="android:layout_width">@dimen/question_content_width</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>

    <style name="question_button.doit">
        <item name="android:background">@drawable/doit_button_invalid</item>
        <item name="android:text">@string/question_action_doit</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
    </style>


</resources>
